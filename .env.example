# Secret keys
SECRET_KEY_BANK=your-django-bank-secret-key
SECRET_KEY_BACKEND=your-django-backend-secret-key
SECRET_KEY_STRIPE=your-stripe-secret-key

# Debug flags
DEBUG_BANK=True         # True or False
DEBUG_BACKEND=True      # True or False

# Django superuser (backend)
DJANGO_SUPERUSER_USERNAME=admin@example.com
DJANGO_SUPERUSER_PASSWORD=SecurePassword1

# Base URLs
BANK_BASE_URL=http://localhost:8080
FRONTEND_BASE_URL=http://localhost:4200

# Postgres main database (backend)
POSTGRES_DB_MAIN=zap_db_main
POSTGRES_USER_MAIN=zap_admin
POSTGRES_PASSWORD_MAIN=zap_admin
POSTGRES_HOST=localhost

# Postgres bank database (bank service)
POSTGRES_DB_BANK=zap_db_bank
POSTGRES_USER_BANK=zap_admin
POSTGRES_PASSWORD_BANK=zap_admin
POSTGRES_HOST_BANK=localhost

# Mercure hub URL
MERCURE_URL=http://localhost:3000/.well-known/mercure

# Email (Brevo/Sendinblue) settings
EMAIL_HOST_USER=your-email-user@smtp-brevo.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-default-from@example.com

# Field encryption key (32 bytes base64)
FIELD_ENCRYPTION_KEY=your-base64-encoded-32-byte-key
